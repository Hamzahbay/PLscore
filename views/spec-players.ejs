<style>
    .container {
        margin: 10% 5%;
    }
    .container .content-box table {
        width: 100%;
        /* margin: 2.5% 0; */
        border-radius: 0 0 5px 5px;
        background-color: #37003cc7;
        color: whitesmoke;
        border-collapse: collapse;
    }
    .container .content-box .tImg {
        border-radius: 5px 5px 0 0;
        margin-top: 5%;
    }
    .container .content-box .tImg tr td {
        text-align: center;
    }
    .container .content-box .tDe tr {
        border-radius: 5px;
    }
    .container .content-box .tDe tr:hover {
        background-color: whitesmoke;
        color: #37003c;
        transition: all 100ms;
    }
    .container .content-box table tr td {
        padding: 1%;
    }
    .container .content-box .tDe tr td {
        padding: 2.5vh 1%;
    }
    .container .content-box .box img {
        min-width: 100px;
        max-width: 200px;
        transition: all 100ms;
    }

    .postNews-rdr:hover {
        background-color: #37003cc7;
        color: whitesmoke;
        transition: all 200ms;
    }

    .loading {
        margin: 25vh 47%;
    }

    @media( max-width: 1080px ) {
    }
    @media( max-width: 800px ) {
        .container {
            margin: 15% 5%;
        }
    }
    @media( max-width: 600px ) {
    }
    @media( max-width: 480px ) {
        .container {
            margin: 20% 5%;
        }
        .container .content-box .tDe tr td {
            padding: 2.5vh .5%;
            font-size: smaller;
        }
    }
    @media( max-width: 400px ) {
        .container {
            margin: 25% 5%;
        }
    }
</style>

