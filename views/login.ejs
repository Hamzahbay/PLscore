<!-- Login/Register Content -->
<div class="content">
    <div class="choice">
        <a href="/account/login"><span class="on">Masuk Akun</span></a>
        <a href="/account/register"><span>Buat Akun</span></a>
    </div>
    <div class="box">
        <div class="desc-alert">
            <%- include('./partials/messages.ejs') %>
        </div>
        <form class="login" action="/account/login" method="POST">
            <p>Email </p>
            <input type="email" name="email" id="email" placeholder="email" required>
            <p>Sandi </p>
            <input type="password" name="password" id="password" style="margin-bottom: 2.5%;" placeholder="kata sandi" autocomplete="off" minlength="6" maxlength="20" required>
            <span id="showPass">Lihat Sandi</span>
            <p><button type="submit">Masuk</button></p>
        </form>
    </div>
</div>
<div class="popup-bg display-none"></div>
<div class="popup display-none">
    <h3>Ketentuan PLscore</h3>
    <ol>
        <li>Mempergunakan web ini dengan bijak</li>
        <li>Menjaga kata-kata</li>
        <li>Tidak menggunakan akun ilegal</li>
    </ol>
    <div>Mengerti</div>
</div>

<script>
    showPass.addEventListener('click', function() {
    this.previousElementSibling.type = 'text'
    this.classList.toggle('showed')

    if( this.classList.contains('showed') ) {
        this.innerText = 'Sembunyikan Sandi'
    }

    if( !this.classList.contains('showed') ) {
        this.innerText = 'Lihat Sandi'
    this.previousElementSibling.type = 'password'
    }
})
</script>

